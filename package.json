{
  "name": "mcp-security-framework",
  "version": "0.9.0",
  "description": "MCP Security Framework - Universal security-by-default middleware for MCP servers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/index.js"
    },
    "./server": "./dist/security/mcp-secure-server.js",
    "./transport": "./dist/security/transport/index.js"
  },
  "scripts": {
    "start": "tsx test-server/minimal-test-server.ts",
    "minimal-server": "tsx test-server/minimal-test-server.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm test",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:performance": "vitest run test/performance",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "eslint src/"
  },
  "keywords": [
    "mcp",
    "security",
    "claude",
    "ai",
    "validation",
    "protection",
    "framework",
    "middleware"
  ],
  "author": "MCP Security Framework",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.19.26",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "winston": "^3.10.0",
    "ws": "^8.18.3"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/himnadmin/mcp-security"
  }
}
