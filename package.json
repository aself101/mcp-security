{
  "name": "mcp-security-framework",
  "version": "0.8.0",
  "description": "MCP Security Framework - Universal security-by-default middleware for MCP servers",
  "type": "module",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./server": "./src/security/mcp-secure-server.js",
    "./transport": "./src/security/transport/index.js"
  },
  "scripts": {
    "start": "node test-server/minimal-test-server.js",
    "test": "vitest",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:performance": "vitest run test/performance",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "eslint src/"
  },
  "keywords": [
    "mcp",
    "security",
    "claude",
    "ai",
    "validation",
    "protection",
    "framework",
    "middleware"
  ],
  "author": "MCP Security Framework",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.1",
    "vitest": "^3.2.4",
    "winston": "^3.10.0",
    "ws": "^8.18.3"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/himnadmin/mcp-security"
  }
}
