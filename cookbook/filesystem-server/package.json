{
  "name": "filesystem-server",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP server demonstrating safe file system operations with resource policies, path traversal prevention, and read/write separation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "mcp-secure-server": "file:../..",
    "zod": "^3.22.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "mcp",
    "security",
    "filesystem",
    "path-traversal",
    "resource-policy"
  ]
}
